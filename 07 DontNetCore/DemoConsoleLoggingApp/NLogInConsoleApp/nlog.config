<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" autoReload="true" internalLogLevel="info" internalLogFile="internalLog.txt">
    <extensions>
        <add assembly="NLog.Web.AspNetCore" />
    </extensions>

    <targets>
        <target name="console" xsi:type="ColoredConsole" layout="${longdate}|${message}" />
        <target name="file" xsi:type="File" fileName="F:\prajval-gahine\prajval-gahine\07 DontNetCore\DemoConsoleLoggingApp\NLogInConsoleApp\log\demo-${shortdate}.log" layout="${longdate}|${message}"/>
    </targets>

    <rules>
        <logger name="*" minlevel="Trace" writeTo="console" />
        <logger name="*" minlevel="Trace" writeTo="file" />
    </rules>
</nlog>

