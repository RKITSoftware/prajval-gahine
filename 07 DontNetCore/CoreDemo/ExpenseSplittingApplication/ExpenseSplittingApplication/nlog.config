<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schema/NLog.xsd"
	  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<targets>
		<target xsi:type="File" name="fileTarget" fileName="${currentdir}/logs/user/${event-properties:item=userId}/logFile.log" layout="${longdate} ${uppercase:${level}} ${message}" />
		<target xsi:type="File" name="fileTarget2" fileName="${currentdir}/logs/logFile.log" layout="${longdate} ${uppercase:${level}} ${message}" />
		<target xsi:type="ColoredConsole" name="consoleTarget" layout="${longdate} ${uppercase:${level}} ${message}" />
	</targets>
	<rules>
		<logger name="ExpenseSplittingApplication.*" minLevel="trace" writeTo="fileTarget,consoleTarget"/>
		<logger name="ExpenseSplittingApplication.*" minLevel="info" writeTo="fileTarget2"/>
	</rules>
</nlog>